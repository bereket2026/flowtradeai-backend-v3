<body>
  <header>
    <div class="title">FlowTradeAI PRO</div>
    <div id="status">Bot stopped</div>
  </header>

  <div class="container">
    <div id="chart"></div>

    <div class="panel">
      <div class="card">
        <h3>BTC Price</h3>
        <div id="btcPrice" class="price">Loading...</div>
      </div>

      <div class="card">
        <h3>Auto Trading</h3>
        <button class="start" onclick="startBot()">Start Bot</button>
        <button class="stop" onclick="stopBot()">Stop Bot</button>
      </div>

      <div class="card">
        <h3>AI Signal</h3>
        <div id="signal">Waiting...</div>
      </div>
    </div>
  </div>

  <script>
    // TradingView Chart
    new TradingView.widget({
      container_id: "chart",
      width: "100%",
      height: "100%",
      symbol: "BINANCE:BTCUSDT",
      interval: "15",
      timezone: "Etc/UTC",
      theme: "dark",
      style: "1",
      locale: "en",
      toolbar_bg: "#020617",
      enable_publishing: false,
      hide_side_toolbar: false,
      allow_symbol_change: false
    });

    // Fetch BTC price
    async function loadPrice() {
      try {
        const res = await fetch('/price/BTCUSDT');
        const data = await res.json();
        if (data.price) {
          document.getElementById('btcPrice').innerText = '$' + data.price;
        }
      } catch {}
    }

    setInterval(loadPrice, 3000);
    loadPrice();

    // Start bot
    async function startBot() {
      await fetch('/auto-trade/start', { method: 'POST' });
      document.getElementById('status').innerText = 'Bot running';
      document.getElementById('signal').innerText = 'AI trading active';
    }

    // Stop bot
    async function stopBot() {
      await fetch('/auto-trade/stop', { method: 'POST' });
      document.getElementById('status').innerText = 'Bot stopped';
      document.getElementById('signal').innerText = 'Paused';
    }
  </script>
</body>
</html>
