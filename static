  <!-- TradingView Chart Library -->
  <script src="https://s3.tradingview.com/tv.js"></script>

  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #020617;
      color: white;
    }

    header {
      padding: 15px 20px;
      background: #020617;
      border-bottom: 1px solid #111827;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .title {
      font-size: 20px;
      font-weight: bold;
      color: #22c55e;
    }

    .container {
      display: grid;
      grid-template-columns: 3fr 1fr;
      height: calc(100vh - 60px);
    }

    #chart {
      height: 100%;
    }

    .panel {
      border-left: 1px solid #111827;
      padding: 20px;
      background: #020617;
    }

    .card {
      background: #020617;
      border: 1px solid #111827;
      border-radius: 12px;
      padding: 15px;
      margin-bottom: 15px;
    }

    button {
      width: 100%;
      padding: 12px;
      margin-top: 10px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
    }

    .start { background: #16a34a; color: white; }
    .stop { background: #dc2626; color: white; }

    .price {
      font-size: 24px;
