<div class="container">

    <div class="card">
        <h2>Account</h2>
        <p>Balance: <span id="balance">--</span></p>
        <p>PnL: <span id="pnl">--</span></p>
    </div>

    <div class="card">
        <h2>Price Checker</h2>
        <input id="symbol" placeholder="BTC/USDT">
        <button onclick="getPrice()">Get Price</button>
        <p>Price: <span id="price">--</span></p>
    </div>

    <div class="card">
        <h2>Auto Trading</h2>
        <button class="start" onclick="startBot()">Start</button>
        <button class="stop" onclick="stopBot()">Stop</button>
        <p>Status: <span id="status">--</span></p>
    </div>

</div>

<script>
async function loadAccount() {
    const res = await fetch("/account");
    const data = await res.json();
    document.getElementById("balance").innerText = data.balance;
    document.getElementById("pnl").innerText = data.pnl;
}

async function getPrice() {
    const symbol = document.getElementById("symbol").value;
    const res = await fetch("/price/" + symbol);
    const data = await res.json();
    document.getElementById("price").innerText = data.price || data.error;
}

async function startBot() {
    await fetch("/auto-trade/start", { method: "POST" });
    checkStatus();
}

async function stopBot() {
    await fetch("/auto-trade/stop", { method: "POST" });
    checkStatus();
}

async function checkStatus() {
    const res = await fetch("/auto-trade/status");
    const data = await res.json();
    document.getElementById("status").innerText = data.running ? "Running" : "Stopped";
}

loadAccount();
checkStatus();
</script>

</body>

