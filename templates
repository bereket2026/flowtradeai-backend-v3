<h1>ðŸš€ FlowTradeAI Live Signals</h1>

<div id="signals"></div>

<script>
async function loadSignals() {
    const coins = ["btc", "eth", "bnb"];
    let html = "";

    for (let coin of coins) {
        const res = await fetch(`/signal/${coin}`);
        const data = await res.json();

        html += `
        <div class="card">
            <h2>${data.symbol}</h2>
            <p>Price: $${data.price}</p>
            <p>RSI: ${data.rsi}</p>
            <h3 class="${data.signal.toLowerCase()}">${data.signal}</h3>
        </div>
        `;
    }

    document.getElementById("signals").innerHTML = html;
}

loadSignals();
setInterval(loadSignals, 15000);
</script>

</body>
</html>
